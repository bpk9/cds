{
  "name": "eslint-plugin-cds",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/eslint-plugin-cds/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "command": "rm -rf esm lib && rollup -c",
      "options": {
        "cwd": "packages/eslint-plugin-cds"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "{projectRoot}/jest.config.mjs"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "dev",
      "configurations": {
        "dev": {
          "command": "tsc --build --pretty --verbose"
        },
        "prod": {
          "command": "tsc --build ./tsconfig.build.json --pretty --verbose"
        }
      }
    }
  }
}
